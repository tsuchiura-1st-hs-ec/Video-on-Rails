<h1>Sign up</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "needs-validation", :novalidate => 'true') do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field form-group">
    <%= f.label :username %><br />
    <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "form-control", id: "validationCustom01", :required => 'true' %>
    <small id="emailHelp" class="form-text text-muted">Username will be shown in public.</small>
    <div class="valid-feedback">
        Looks good!
      </div>
  </div>

  <div class="field form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autocomplete: "email", class: "form-control", id: "exampleInputEmail1", :required => 'true' %>
    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
  </div>

  <div class="field form-group">
    <%= f.label :password %>
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control", id: "exampleInputPassword1", :required => 'true' %>
    <small class="form-text text-muted" ><% if @minimum_password_length %><%= @minimum_password_length %> characters minimum<% end %></small>
  </div>

  <div class="field form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", id: "exampleInputPassword1", :required => 'true' %>
  </div>

  <div class="actions form-group">
    <%= f.submit "Sign up", class: "btn btn-primary btn-lg btn-block" %>
  </div>
<% end %>

<%#= render "users/shared/links" %>
