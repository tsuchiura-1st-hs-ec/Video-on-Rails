<h1>Edit <%= @user.username %>'s information</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field form-group">
    <%= f.label :username %><br />
    <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "form-control", id: "validationCustom01", :required => 'true' %>
    <small id="emailHelp" class="form-text text-muted">Username will be shown in public.</small>
    <div class="valid-feedback">
        Looks good!
      </div>
  </div>

  <div class="field form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", id: "exampleInputEmail1", :required => 'true' %>
  </div>

  <div class="card form-group">
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="card-header">
      Leave password section below blank if you don't want to change it.
    </div>

    <div class="card-body">
      <div class="field form-group">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control", id: "exampleInputPassword1"%>
        <small id="passwordHelp" class="form-text text-muted">
          <% if @minimum_password_length %>
            <%= @minimum_password_length %> characters minimum
          <% end %>
        </small>
      </div>

      <div class="field form-group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", id: "exampleInputPassword1" %>
      </div>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :current_password %>
    <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control", id: "exampleInputPassword1" %>
    <small id="emailHelp" class="form-text text-muted">We need your current password to confirm your changes.</small>

  </div>

  <div class="actions form-group">
    <%= f.submit "Update", class: "btn btn-danger btn-lg btn-block" %>
  </div>
<% end %>
